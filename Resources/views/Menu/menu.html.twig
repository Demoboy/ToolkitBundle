{% extends 'knp_menu.html.twig' %}

{% block linkElement %}
    {% import 'knp_menu.html.twig' as knp_menu %}
    <a href="{{ item.uri }}"{{ knp_menu.attributes(item.linkAttributes) }}>{{ block('label') }}</a>
{% endblock %}

{% block spanElement %}
    {% import 'knp_menu.html.twig' as knp_menu %}
    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"
       href="javascript:;" {{ knp_menu.attributes(item.linkAttributes) }}>
        {{ block('label') }}
        <span class="caret"></span>
    </a>
{% endblock %}

{% block label %}
    {%- if item.extras.icon is defined -%}
        <i class="{{item.extras.icon}}"></i>
    {%- endif -%}
    <span>{{ item.label }}</span>
    {%- if item.extras.label is defined -%}
        <span class="label">{{ item.extras.label }}</span>
    {%- endif -%}
{% endblock %}
