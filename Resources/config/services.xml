<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kmj_toolkit.toolkit.class">KMJ\ToolkitBundle\Service\ToolkitService</parameter>
        <parameter key="kmj_toolkit.hierarchy">KMJ\ToolkitBundle\Hierarchy\RoleHierarchy</parameter>
    </parameters>

    <services>
        <service id="kmj_toolkit.toolkit" class="%kmj_toolkit.toolkit.class%">
            <argument>%kmj.toolkit.service.parameters%</argument>
            <argument type="service" id="fos_user.user_manager" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>
        <service alias="kmj_toolkit.toolkit" id="toolkit" />
        <service id="security.role_hierarchy" class="%kmj_toolkit.hierarchy%" public="false">
            <argument>%security.role_hierarchy.roles%</argument>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>
    </services>
</container>
